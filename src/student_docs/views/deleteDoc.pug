extends ../../../node_modules/jade-bootstrap/_bootstrap.pug
append styles
  link(href='./css/login.css', rel='stylesheet')
  head
    title= title
  body
  .container
    form.form-signin(action='/sponsor_docs/deleteDoc', method='POST')
      h2.form-signin-heading= heading
      h4.form-signin-heading= 'Document Title: ' + DocTitle
      h4.form-signin-heading= 'Document Description ' + DocDescr + " "
      input#inputEmail.form-control(type='hidden', name='DocId', value=DocId, placeholder='Enter Existing DocId')
      input#inputEmail.form-controlinput(type='submit', value='DELETE')
      br
      a(href='/listDocs') Cancel
