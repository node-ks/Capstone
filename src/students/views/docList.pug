extends ../../../node_modules/jade-bootstrap/_bootstrap.pug
append styles
	link(href='./css/studentList.css', rel='stylesheet')
block body  
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/home') Experience Summer Work USA
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav.navbar-right
					li
						a(href='/home') Home
					li
						a(href='/logout') Logout
	.container-fluid
		.row
			.col-xs-6.col-sm-2
			| 	&nbsp
			.col-xs-6.col-sm-10
				br
				br
				br
				h2.sub-header Sponsor Required Documents
				.table-responsive
					table.table.table-striped
						thead
							tr
								th #
								th Document Title
								th Document Description
								th File Upload
						tbody
						each val in list.length ? list : ['There are no values']
							tr
								td= val.snum
								td= val.DocTitle 
								td= val.DocDescr
								td

                                
									a(href='/student/viewFile/' + val.FilePath)  View
									|&nbsp &nbsp
									a(href='/student/submitDoc/' + val.DocId) &nbsp Upload
				
									