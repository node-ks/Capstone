extends ../../../node_modules/jade-bootstrap/_bootstrap.pug
append styles
  link(href='./css/login.css', rel='stylesheet')
  head
    title= title
  body
  .container
    form.form-signin(action='/facilitator/deleteFacilitator', method='POST')
      h2.form-signin-heading= heading
      h4.form-signin-heading= 'Name: ' + " " + JobTitle
      h4.form-signin-heading= 'JobId: ' + JobId + " "
      input#inputEmail.form-control(type='hidden', name='FacId', value=FacId, placeholder='Enter Existing FacId')
      input#inputEmail.form-controlinput(type='submit', value='DELETE')
      br
      a(href='/home') Cancel
